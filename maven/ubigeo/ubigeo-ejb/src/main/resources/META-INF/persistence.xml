<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ubigeoPU">
		<jta-data-source>java:jboss/datasources/ubigeoDS</jta-data-source>

		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.CountryEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.CurrencyEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.DenominationEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.DepartamentoEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.DistritoEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.ExchangeRateEntity</class>
		<class>org.softgreen.sistcoop.ubigeo.ejb.models.jpa.entities.ProvinciaEntity</class>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>
</persistence>
